{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <div class="section">
        <div class="container">
            <div class="section-title">
                <h3 class="title">Connexion</h3>
            </div>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <div class="form-group" style="max-width: 340px">
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input class="input" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                </div>

                <div class="form-group" style="max-width: 340px">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input class="input" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
                </div>

                <div class="input-checkbox">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                </div>
                <input class="primary-btn" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </form>
        </div>
    </div>

{% endblock %}
