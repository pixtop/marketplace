{% if pageCount > 1 %}
    <ul class="reviews-pages">

        {% if previous is defined %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): previous, 'tab': 'avis'})) }}"><i class="fa fa-caret-left"></i></a>
            </li>
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): page, 'tab': 'avis'})) }}">{{ page }}</a>
                </li>
            {% else %}
                <li class="active">{{ page }}</li>
            {% endif %}
        {% endfor %}

        {% if next is defined %}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): next, 'tab': 'avis'})) }}"><i class="fa fa-caret-right"></i></a>
            </li>
        {% endif %}

    </ul>
{% endif %}