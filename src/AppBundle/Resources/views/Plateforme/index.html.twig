{% extends "::base.html.twig" %}

{% block title %}Plateforme{% endblock %}

{% block body %}
    <div class="section">
        <div class="container">
            <div class="section-title">
                <h3 class="title">Gestion Plateforme</h3>
            </div>
            {{ form_start(form, {attr:{'class':'fos_user'}}) }}
            <div class="row">
                <div class="col">
                    {{ form_row(form.inscriptionAcheteur) }}
                    {{ form_row(form.inscriptionVendeur) }}
                    {% if not plateforme.isInfoHote %}
                        {{ form_row(form.infoHote) }}
                        <p>Le coût d'achat des données personnelles est de : {{ hote.coutDonneePerso|number_format('2','.',' ') }} €</p>
                    {% endif %}
                    {{ form_row(form.triChoix) }}
                </div>
                <div class="col">
                    {{ form_row(form.commissionAcheteur) }}
                    {{ form_row(form.commissionVendeur) }}
                    <button class="primary-btn" type="submit">Changer</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
